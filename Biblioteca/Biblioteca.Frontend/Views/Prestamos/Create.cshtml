@model Biblioteca.Frontend.Models.Prestamo
@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> Crear Prestamo</h5>
        </div>
        <div class=" card-body text-center">
            <form asp-action="Create" method="post">
                <input type="hidden" asp-for="EstadoPrestamo" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              
                <div class="form-group">
                    <label></label>
                    <select asp-for="LibroId" asp-items="Model.Libros" class="form-control"></select>
                    <span asp-validation-for="LibroId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <select asp-for="ClienteId" asp-items="Model.Clientes" class="form-control"></select>
                    <span asp-validation-for="ClienteId" class="text-danger"></span>
                </div>
                
                <div class=" card-footer ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

