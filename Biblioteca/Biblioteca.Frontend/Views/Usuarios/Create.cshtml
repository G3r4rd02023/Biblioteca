@model Biblioteca.Frontend.Models.Usuario
@{
    ViewData["Title"] = "Create";
    Layout = null;
}



<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> Crear Usuario</h5>
        </div>
        <div class=" card-body text-center">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Estado" />
                <div class="form-group">
                    <label></label>
                    <input asp-for="NombreCompleto" class="form-control" placeholder=" Nombre Completo" />
                    <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="Correo" class="form-control" placeholder=" Email" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="Clave" class="form-control" placeholder=" Contraseña" type="password" />
                    <span asp-validation-for="Clave" class="text-danger"></span>
                </div>               
                <div class=" card-footer ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


