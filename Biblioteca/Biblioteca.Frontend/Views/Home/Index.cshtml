@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <h3 class="text-center"></h3>
</div>

<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <h5>Prestamos <span class="badge bg-light text-dark">@ViewBag.CantidadPrestamos</span>
                        </h5> <i class="fa-solid fa-3x fa-address-book"></i> </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href=@Url.Action("Index","Prestamos")>Ver Prestamos</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <h5>
                        Devoluciones <span class="badge bg-light text-dark">@ViewBag.Devoluciones</span>
                    </h5> <i class="fa-solid fa-3x fa-arrow-rotate-left"></i>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href=@Url.Action("Index","Prestamos")>Ver Devoluciones</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <h5>
                        Pendientes <span class="badge bg-light text-dark">@ViewBag.Pendientes</span>
                    </h5> <i class="fa-solid fa-3x fa-regular fa-clipboard"></i>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href=@Url.Action("Index","Prestamos")>Ver Pendientes</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <h5>
                        Libros Disponibles <span class="badge bg-light text-dark">@ViewBag.Libros</span>
                    </h5> <i class="fa-solid fa-3x fa-solid fa-book"></i>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href=@Url.Action("Index","Libros")>Ver Libros</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>
</div>
