@model Biblioteca.Frontend.Models.Libro
@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> Crear Libro</h5>
        </div>
        <div class=" card-body text-center">
            <form asp-action="Create" method="post" >
                <input type="hidden" asp-for="Estado" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="Titulo" class="form-control" placeholder=" Titulo" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="Autor" class="form-control" placeholder=" Autor" />
                    <span asp-validation-for="Autor" class="text-danger"></span>
                </div>               
                <div class="form-group">
                    <label></label>
                    <select asp-for="CategoriaId" asp-items="Model.Categorias" class="form-control"></select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Fecha de Publicacion</label>
                    <input asp-for="FechaPublicacion" class="form-control" placeholder="FechaPublicacion" type = "date" />
                    <span asp-validation-for="FechaPublicacion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Cantidad</label>
                    <input asp-for="Cantidad" class="form-control" placeholder="Cantidad" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>               
                <div class=" card-footer ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

