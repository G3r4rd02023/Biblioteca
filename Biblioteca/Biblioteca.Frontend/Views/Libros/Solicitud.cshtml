@model Biblioteca.Frontend.Models.Prestamo
@{
    ViewData["Title"] = "Solicitud";
    Layout = null;
}

<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> Solicitar Prestamo</h5>
        </div>
        <div class=" card-body text-center">
            <form asp-action="Solicitud" method="post">
                <input type="hidden" asp-for="EstadoPrestamo" />
                <input type="hidden" asp-for="FechaPrestamo" />
                <input type="hidden" asp-for="Libro" />
                <input type="hidden" asp-for="Usuario" />
                <input type="hidden" asp-for="LibroId" />
                <input type="hidden" asp-for="UsuarioId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label>Cantidad</label>
                    <input asp-for="Cantidad" class="form-control" placeholder="Cantidad" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Fecha de Devolucion</label>
                    <input asp-for="FechaDevolucion" class="form-control" />
                    <span asp-validation-for="FechaDevolucion" class="text-danger"></span>
                </div>

                <div class=" card-footer ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

